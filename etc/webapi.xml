<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route method="POST" url="/V1/thunderstone/order">
        <service class="Thunderstone\Order\Api\OrderControllerInterface" method="postOrder"/>
        <resources>
            <resource ref="Thunderstone_Order::order"/>
        </resources>
    </route>
    <route method="GET" url="/V1/thunderstone/order">
        <service class="Thunderstone\Order\Api\OrderControllerInterface" method="getOrder"/>
        <resources>
            <resource ref="Thunderstone_Order::order"/>
        </resources>
    </route>
</routes>